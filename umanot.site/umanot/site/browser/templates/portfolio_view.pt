<html metal:use-macro="here/fullwidth_main_template/macros/master" i18n:domain="umanot.site">

  <head>
    <metal:js fill-slot="javascript_head_slot">
      <script>
      </script>
    </metal:js>

  </head>

  <body>

    <metal:headline fill-slot="headline_section_slot">

      <div id="article-folder-headline">
        <div class="gridOverlay"></div>
        <div class="headlineContent">
          <h1 class="documentFirstHeading"></h1>
        </div>
      </div>

    </metal:headline>

    <metal:phil fill-slot="main" tal:define="data view/get_data">
      <div class="container">
        <tal:loop tal:repeat="item data">
          <div class="mrow">
            <div class="col-md-4">
              <figure tal:condition="item/has_image"><img class="img-responsive" tal:attributes="src item/image"></figure>
            </div>
            <div class="col-md-4">
              <ul class="visualNoMarker">
                <li tal:condition="item/share" tal:content="item/share"></li>
                <li tal:condition="item/post" tal:content="item/post"></li>
              </ul>
            </div>
          </div>
        </tal:loop>
      </div>
    </metal:phil>
  </body>
</html>